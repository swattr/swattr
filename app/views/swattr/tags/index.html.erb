<h1>Listing Tags</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Color</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= tag.description %></td>
        <td><%= tag.color %></td>
        <td><%= tag.position %></td>
        <td><%= link_to Swattr.t("actions.show"), tag %></td>
        <td><%= link_to Swattr.t("actions.edit"), edit_tag_path(tag) %></td>
        <td><%= link_to Swattr.t("actions.destroy"), tag, method: :delete, data: { confirm: Swattr.t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Tag", new_tag_path %>
