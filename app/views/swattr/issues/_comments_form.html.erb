<div id="issue_comments_create">
  <h2><%= Swattr.t(:new_comment) %></h2>

  <%= simple_form_for([@project, @issue, @comment],
                      wrapper: :vertical_form,
                      html: { class: "form-vertical" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :body %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
