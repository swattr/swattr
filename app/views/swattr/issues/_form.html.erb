<%= simple_form_for([@project, @issue],
                    wrapper: :vertical_form,
                    html: { class: "form-vertical" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.association :project, as: :select %>
    <%= f.association :author, as: :select %>
    <%= f.association :assignee, as: :select %>
    <%= f.association :priority, as: :select %>
    <%= f.association :status, as: :select %>
    <%= f.association :resolution, as: :select %>
    <%= f.input :due_at, as: :datetime,
                         order: [:month, :day, :year, :hour, :minute] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
