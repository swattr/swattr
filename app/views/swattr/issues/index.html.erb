<h1><%= Swattr.t(:list_issues) %></h1>

<%= render "search" %>

<table>
  <thead>
    <tr>
      <th><%= Swattr.t(:title) %></th>
      <th><%= Swattr.t(:content) %></th>
      <th><%= Swattr.t(:project) %></th>
      <th><%= Swattr.t(:author) %></th>
      <th><%= Swattr.t(:assignee) %></th>
      <th><%= Swattr.t(:priority) %></th>
      <th><%= Swattr.t(:status) %></th>
      <th><%= Swattr.t(:resolution) %></th>
      <th><%= Swattr.t(:due_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @issues %>
  </tbody>
</table>

<%= paginate @issues %>

<%= link_to Swattr.t(:new_issue), new_project_issue_path(@project) %>
