<h1>Listing Issues</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Project</th>
      <th>Author</th>
      <th>Assignee</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Resolution</th>
      <th>Due At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.content %></td>
        <td><%= issue.project_id %></td>
        <td><%= issue.author_id %></td>
        <td><%= issue.assignee_id %></td>
        <td><%= issue.priority_id %></td>
        <td><%= issue.status_id %></td>
        <td><%= issue.resolution_id %></td>
        <td><%= issue.due_at %></td>
        <td><%= link_to "Show", issue %></td>
        <td><%= link_to "Edit", edit_issue_path(issue) %></td>
        <td><%= link_to "Destroy", issue, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @issues %>

<%= link_to "New Issue", new_issue_path %>
