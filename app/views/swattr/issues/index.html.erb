<h1>Listing Issues</h1>

<%= render "search" %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Project</th>
      <th>Author</th>
      <th>Assignee</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Resolution</th>
      <th>Due At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.content %></td>
        <td><%= issue.project.name %></td>
        <td><%= issue.author.name %></td>
        <td><%= issue.assignee.name %></td>
        <td><%= issue.priority_id %></td>
        <td><%= issue.status_id %></td>
        <td><%= issue.resolution_id %></td>
        <td><%= issue.due_at %></td>
        <td><%= link_to Swattr.t("actions.show"), project_issue_path(issue.project_id, issue) %></td>
        <td><%= link_to Swattr.t("actions.edit"), edit_project_issue_path(issue.project_id, issue) %></td>
        <td><%= link_to Swattr.t("actions.destroy"), project_issue_path(issue.project_id, issue), method: :delete, data: { confirm: Swattr.t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @issues %>

<%= link_to "New Issue", new_project_issue_path(params[:project_id]) %>
