<div id="issue_tasks_create">
  <h2><%= Swattr.t(:new_task) %></h2>

  <%= simple_form_for([@project, @issue, @task],
                      html: { class: "form-vertical" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
