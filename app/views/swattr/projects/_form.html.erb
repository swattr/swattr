<%= simple_form_for(@project,
                    wrapper: :vertical_form,
                    html: { class: "form-vertical" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :slug %>
    <%= f.input :description, as: :text %>
    <%= f.input :location %>
    <%= f.association :author, as: :select %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
