<h1>Listing Priorities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @priorities.each do |priority| %>
      <tr>
        <td><%= priority.name %></td>
        <td><%= priority.description %></td>
        <td><%= priority.position %></td>
        <td><%= link_to Swattr.t("actions.show"), priority %></td>
        <td><%= link_to Swattr.t("actions.edit"), edit_priority_path(priority) %></td>
        <td><%= link_to Swattr.t("actions.destroy"), priority, method: :delete, data: { confirm: Swattr.t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Priority", new_priority_path %>
