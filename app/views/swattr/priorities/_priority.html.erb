<tr>
  <td><%= priority.name %></td>
  <td><%= priority.description %></td>
  <td>
    <% if policy(priority).show? %>
      <%= link_to Swattr.t(:show), priority %>
    <% end %>
    <% if policy(priority).edit? %>
      <%= link_to Swattr.t(:edit), edit_priority_path(priority) %>
    <% end %>
    <% if policy(priority).destroy? %>
      <%= link_to Swattr.t(:destroy), priority, method: :delete, data: { confirm: Swattr.t(:are_you_sure) } %>
    <% end %>
  </td>
</tr>
