<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Issue</th>
      <th>Author</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.issue_id %></td>
        <td><%= task.author_id %></td>
        <td><%= task.position %></td>
        <td><%= link_to Swattr.t("actions.show"), task %></td>
        <td><%= link_to Swattr.t("actions.edit"), edit_task_path(task) %></td>
        <td><%= link_to Swattr.t("actions.destroy"), task, method: :delete, data: { confirm: Swattr.t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Task", new_task_path %>
