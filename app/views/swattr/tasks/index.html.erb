<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Issue</th>
      <th>Author</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.issue_id %></td>
        <td><%= task.author_id %></td>
        <td><%= task.position %></td>
        <td><%= link_to "Show", task %></td>
        <td><%= link_to "Edit", edit_task_path(task) %></td>
        <td><%= link_to "Destroy", task, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

