<h1><%= Swattr.t(:list_tasks) %></h1>

<table>
  <thead>
    <tr>
      <th><%= Swattr.t(:title) %></th>
      <th><%= Swattr.t(:issue) %></th>
      <th><%= Swattr.t(:author) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @tasks %>
  </tbody>
</table>

