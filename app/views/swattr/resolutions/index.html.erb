<h1>Listing Resolutions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resolutions.each do |resolution| %>
      <tr>
        <td><%= resolution.name %></td>
        <td><%= resolution.description %></td>
        <td><%= resolution.position %></td>
        <td><%= link_to Swattr.t("actions.show"), resolution %></td>
        <td><%= link_to Swattr.t("actions.edit"), edit_resolution_path(resolution) %></td>
        <td><%= link_to Swattr.t("actions.destroy"), resolution, method: :delete, data: { confirm: Swattr.t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Resolution", new_resolution_path %>
