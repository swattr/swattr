<tr>
  <td><%= image_tag(user.avatar.thumb.url) %></td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= link_to Swattr.t(:show), user %></td>
  <td><%= link_to Swattr.t(:edit), edit_user_path(user) %></td>
  <td><%= link_to Swattr.t(:destroy), user, method: :delete, data: { confirm: Swattr.t(:are_you_sure) } %></td>
</tr>
