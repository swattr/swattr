<h1>Listing Users</h1>

<%= render "search" %>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag(user.avatar.thumb.url) %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to Swattr.t("actions.show"), user %></td>
        <td><%= link_to Swattr.t("actions.edit"), edit_user_path(user) %></td>
        <td><%= link_to Swattr.t("actions.destroy"), user, method: :delete, data: { confirm: Swattr.t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>

<%= link_to "New User", new_user_path %>
