<h1>Listing Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.name %></td>
        <td><%= status.description %></td>
        <td><%= status.position %></td>
        <td><%= link_to Swattr.t("actions.show"), status %></td>
        <td><%= link_to Swattr.t("actions.edit"), edit_status_path(status) %></td>
        <td><%= link_to Swattr.t("actions.destroy"), status, method: :delete, data: { confirm: Swattr.t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Status", new_status_path %>
