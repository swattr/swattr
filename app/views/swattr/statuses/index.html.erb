<div class="page-header">
  <h1><%= Swattr.t(:list_statuses) %></h1>
</div>

<div class="table-responsive">
  <table class="table-striped">
    <thead>
      <tr>
        <th><%= Swattr.t(:name) %></th>
        <th><%= Swattr.t(:description) %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= render @statuses %>
    </tbody>
  </table>
</div>

<% if policy(@statuses).new? %>
  <%= link_to Swattr.t(:new_status), new_status_path %>
<% end %>
