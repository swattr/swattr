# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.rb]
max_line_length = 80

[*.{css,sass,scss,less,js,coffee}]
max_line_length = 120

[*.{css,js}]
indent_style = tab
indent_size = 4

[*.{md,json,yml}]
insert_final_newline = false
